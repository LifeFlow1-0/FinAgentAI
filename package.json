{
  "name": "lifeflow-monorepo",
  "version": "1.0.0",
  "description": "LifeFlow application monorepo",
  "private": true,
  "scripts": {
    "backend:install": "cd backend && pip3 install -r config/dev/requirements.txt",
    "backend:dev": "cd backend && uvicorn app.main:app --reload",
    "backend:test": "cd backend && pytest",
    "mobile:install": "cd mobile && npm install",
    "mobile:start": "cd mobile && npm run start",
    "mobile:test": "cd mobile && npm test",
    "mobile:ios": "cd mobile && npm run ios",
    "mobile:android": "cd mobile && npm run android"
  }
}
